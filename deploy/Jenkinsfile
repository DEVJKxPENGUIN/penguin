pipeline {
    agent any
    stages {
        stage('build Jar') {
            steps {
                echo 'Building..'
                echo "${params.role}"
                sh "./gradlew ${params.role}:bootJar"
                sh "ls -la ./${params.role}/build/libs"
            }
        }
        stage('build Docker') {
            steps {
                echo 'Building Docker..'
                sh "docker -version"
                sh "docker build -t devjk4254/penguin ./${params.role}"
                sh "docker image push devjk4254/penguin"
            }
        }
    }
}