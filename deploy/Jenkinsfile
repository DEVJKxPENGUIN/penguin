pipeline {
    agent any
    stages {
        stage('build jar') {
            steps {
                echo 'Building..'
                echo "${params.role}"
                sh "./gradlew ${params.role}:bootJar"
                sh "ls -la ./${params.role}/build/libs"
            }
        }
        stage('build image') {
            steps {
                echo 'Building Docker..'
                def image = docker.build("devjk4254/penguin", "./${params.role}")
                image.push()
            }
        }
    }
}