pipeline {
    agent {
        kubernetes {
            yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: docker
    image: docker:23.0-dind
    securityContext:
      privileged: true
    env:
    - name: DOCKER_TLS_CERTDIR
      value: "/certs"
    - name: DOCKER_HOST
      value: "tcp://localhost:2376"
    volumeMounts:
    - name: docker-certs
      mountPath: /certs
  - name: gradle
    image: gradle:8.5.0-jdk21
    command:
    - cat
    tty: true
    volumeMounts:
    - name: gradle-cache
      mountPath: /home/gradle/.gradle
  volumes:
  - name: docker-certs
    emptyDir: {}
  - name: gradle-cache
    emptyDir: {}
"""
        }
    }

    environment {
        DOCKER_CERT_PATH = credentials('dockerhub')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Jar') {
            steps {
                container('gradle') {
                    sh """
                    echo 'Building..'
                    echo "${params.role}"
                    gradle ${params.role}:bootJar
                    ls -la ./${params.role}/build/libs
                    """
                }
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                container('docker') {
                    sh """
                    echo 'Starting Docker daemon...'
                    dockerd-entrypoint.sh &
                    sleep 20
                    echo 'Building Docker..'
                    docker --version
                    docker info
                    docker buildx create --use
                    docker buildx build --platform linux/amd64,linux/arm64 -t devjk4254/penguin:${BUILD_NUMBER} --push ./${params.role}
                    """
                }
            }
        }
    }
}